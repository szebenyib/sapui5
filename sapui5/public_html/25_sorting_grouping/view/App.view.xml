<mvc:View
	controllerName="namespace_id.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"> <!-- for mobile support -->
	<App class="appClass">
		<pages>
			<Page title="{i18n>homePageTitle}">
				<headerContent>
					<Button icon="sap-icon://hello-world"
									press="onDialogButtonPressed" />
				</headerContent>
				<content>
					<mvc:XMLView viewName="namespace_id.view.ownPanel" />
					<mvc:XMLView viewName="namespace_id.view.InvoiceList" />
				</content>
			</Page>
		</pages>
	</App>
	<Button text="{i18n>sampleText}" press="onSayThis"	/>
	<Input
		value="{/recipient/name}"
		description="Hi: {/recipient/name}"
		valueLiveUpdate="true"
		width="60%"/>
</mvc:View>
